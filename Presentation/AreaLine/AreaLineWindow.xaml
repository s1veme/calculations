<Window x:Class="GeoApp.Presentation.AreaLine.AreaLineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeoApp.Presentation.AreaLine"
        mc:Ignorable="d"
        Title="AreaLineWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="AreaLinesDataGrid" Grid.Row="0" Margin="10,10,10,10" SelectionUnit="FullRow">
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,10,0,10" Width="649">
            <Button Content="Добавить линию" Width="120" Margin="5" Click="AddLine" />
            <Button Content="Удалить линию" Width="120" Margin="5" Click="DeleteLine" />
            <Button Content="Редактировать линию" Width="144" Margin="5" Click="EditLine" />
            <Button Content="Открыть детальную линию" Width="213" Margin="5" Click="OpenLineDetail" />
        </StackPanel>
    </Grid>
</Window>
